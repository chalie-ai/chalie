# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=chalie
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password

# Database Encryption Key (optional)
# Encrypts provider API keys and the REST API authentication token.
# If not set as an environment variable, the system will:
#   1. Check for a .key file in the project root
#   2. Auto-generate a new key and save it to .key (permissions: 0600) if neither exists
# To set manually: DB_ENCRYPTION_KEY=your-strong-random-passphrase-here
# Generate manually with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# DB_ENCRYPTION_KEY=your-strong-random-passphrase-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# REST API Configuration
REST_API_HOST=0.0.0.0
REST_API_PORT=8080

# Session Authentication
# Cookie secret for signing session tokens. Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=changeme-in-production-use-a-long-random-string

# Set to true when serving over HTTPS (remote/production deployments)
# WARNING: Without HTTPS, session cookies can be intercepted over the network
COOKIE_SECURE=false

# NOTE: LLM Provider Configuration
# All LLM provider configuration (APIs, endpoints, models) is managed exclusively
# via the PostgreSQL database through the REST API. See docs/02-PROVIDERS-SETUP.md for details.
# No LLM provider credentials should be stored in environment variables.

# NOTE: Tool-specific secrets
# Tool-specific secrets (e.g., Telegram token) live in tools/<name>/.env
