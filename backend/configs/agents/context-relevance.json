  "dependencies": {
    "episodic_memory": ["gists"],
    "focus": ["active_goals"],
    "onboarding_nudge": ["identity_context"],
    "warm_return_hint": ["identity_context"],
    "adaptive_directives": ["communication_style"]
  },
  "signal_rules": {
    "episodic_memory": [
      {
        "when": {
          "context_warmth_gte": 0.5,
          "working_memory_turns_gte": 2
        },
        "strength": "soft"
      },
      {
        "when": {
          "greeting_pattern": true
        },
        "strength": "soft"
      },
      {
        "when": {
          "information_density_lt": 0.2
        },
        "strength": "hard"
      }
    ],
    "world_state": [
      {
        "when": {
          "implicit_reference": false,
          "information_density_lt": 0.5
        },
        "strength": "hard"
      },
      {
        "when": {
          "greeting_pattern": true,
          "prompt_token_count_lt": 6
        },
        "strength": "hard"
      }
    ],
    "working_memory": [
      {
        "when": {
          "greeting_pattern": true,
          "prompt_token_count_lt": 6
        },
        "strength": "hard"
      }
    ],
    "focus": [
      {
        "when": {
          "greeting_pattern": true
        },
        "strength": "soft"
      },
      {
        "when": {
          "greeting_pattern": true,
          "prompt_token_count_lt": 6
        },
        "strength": "hard"
      }
    ],
    "active_goals": [
      {
        "when": {
          "greeting_pattern": true
        },
        "strength": "soft"
      },
      {
        "when": {
          "information_density_lt": 0.2
        },
        "strength": "hard"
      }
    ],
    "facts": [
      {
        "when": {
          "fact_count_eq": 0
        },
        "strength": "hard"
      }
    ],
    "gists": [
      {
        "when": {
          "gist_count_eq": 0,
          "working_memory_turns_gte": 2
        },
        "strength": "hard"
      }
    ],
    "active_lists": [
      {
        "when": {
          "greeting_pattern": true
        },
        "strength": "soft"
      },
      {
        "when": {
          "greeting_pattern": true,
          "prompt_token_count_lt": 6
        },
        "strength": "hard"
      }
    ],
    "onboarding_nudge": []
  },
  "urgency_overrides": [
    "working_memory",
    "world_state",
    "facts"
  ],
  "safety_overrides": {
    "identity_context": [
      {
        "when": {
          "returning_from_silence": true
        }
      },
      {
        "when": {
          "context_warmth_lt": 0.3
        }
      }
    ],
    "working_memory": [
      {
        "when": {
          "working_memory_turns_gte": 1
        }
      }
    ],
    "warm_return_hint": [
      {
        "when": {
          "returning_from_silence": true
        }
      }
    ],
    "user_traits": [
      {
        "when": {
          "returning_from_silence": true
        }
      }
    ]
  },
  "soft_recovery_budget": 1500,
  "soft_recovery_priority": [
    "episodic_memory",
    "working_memory",
    "world_state",
    "facts",
    "active_goals",
    "active_lists",
    "focus",
    "gists"
  ],
  "max_included_nodes": 14
}
